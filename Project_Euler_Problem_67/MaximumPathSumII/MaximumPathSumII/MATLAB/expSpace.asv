function [R_] = expSpace( )

    [R_,OPT_]   = LTM()                   ;

    while ( ~OPT_ )

        [D_]    = trellis(R_)             ;
    
        [R_]    = mapping(R_,D_)          ;
    
        [R_]    = exponentiate(R_)        ;

        [R_]    = parameterize(R_)        ;

        [OPT_]  = optimize(R_)            ;

    end

    % save("R_.mat","R_")                 ;
    % R_      = load("R_.mat")            ;
    % R_      = R_.R_                     ;  